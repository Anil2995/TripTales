<% layout("/layouts/boilerplate") %>

    <style>
        .create-listing-page {
            animation: fadeIn 0.5s ease;
            max-width: 800px;
            margin: 0 auto;
        }

        .page-header {
            text-align: center;
            margin-bottom: var(--space-xxl);
            padding-bottom: var(--space-xl);
            border-bottom: 1px solid var(--border-light);
        }

        .page-header h1 {
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: var(--space-sm);
        }

        .page-header p {
            color: var(--grey);
            font-size: 1.1rem;
        }

        .form-card {
            background: var(--background);
            border: 1px solid var(--border);
            border-radius: var(--radius-xl);
            padding: var(--space-xl);
            box-shadow: var(--shadow-md);
        }

        .form-section {
            margin-bottom: var(--space-xl);
            padding-bottom: var(--space-xl);
            border-bottom: 1px solid var(--border-light);
        }

        .form-section:last-child {
            border-bottom: none;
            margin-bottom: 0;
            padding-bottom: 0;
        }

        .form-section h3 {
            font-size: 1.3rem;
            font-weight: 600;
            margin-bottom: var(--space-md);
            display: flex;
            align-items: center;
            gap: var(--space-sm);
        }

        .form-section h3 i {
            color: var(--primary);
        }

        .form-hint {
            color: var(--grey);
            font-size: 0.9rem;
            margin-bottom: var(--space-lg);
        }

        .upload-area {
            border: 2px dashed var(--border);
            border-radius: var(--radius-lg);
            padding: var(--space-xxl);
            text-align: center;
            cursor: pointer;
            transition: all var(--transition-normal);
            background: var(--background-secondary);
        }

        .upload-area:hover {
            border-color: var(--primary);
            background: rgba(255, 56, 92, 0.05);
        }

        .upload-area i {
            font-size: 3rem;
            color: var(--grey);
            margin-bottom: var(--space-md);
        }

        .upload-area p {
            color: var(--grey);
            margin: 0;
        }

        .upload-area input[type="file"] {
            display: none;
        }

        .price-input-group {
            position: relative;
        }

        .price-input-group .currency-symbol {
            position: absolute;
            left: var(--space-md);
            top: 50%;
            transform: translateY(-50%);
            color: var(--grey);
            font-weight: 600;
        }

        .price-input-group input {
            padding-left: var(--space-xxl) !important;
        }

        .submit-section {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding-top: var(--space-lg);
            margin-top: var(--space-lg);
            border-top: 1px solid var(--border-light);
        }

        .submit-btn {
            background: var(--gradient-primary);
            color: white;
            border: none;
            border-radius: var(--radius-full);
            padding: var(--space-md) var(--space-xxl);
            font-size: 1rem;
            font-weight: 700;
            cursor: pointer;
            transition: all var(--transition-normal);
            display: flex;
            align-items: center;
            gap: var(--space-sm);
        }

        .submit-btn:hover {
            transform: translateY(-2px);
            box-shadow: var(--shadow-lg);
        }

        .cancel-btn {
            color: var(--grey);
            text-decoration: underline;
            background: none;
            border: none;
            cursor: pointer;
            font-weight: 500;
        }

        .cancel-btn:hover {
            color: var(--dark);
        }
    </style>

    <div class="create-listing-page">
        <div class="page-header">
            <h1>
                <i class="fa-solid fa-house-circle-plus me-2" style="color: var(--primary);"></i>
                Create a New Listing
            </h1>
            <p>Share your amazing place with travelers around the world</p>
        </div>

        <div class="form-card">
            <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">

                <!-- Basic Information -->
                <div class="form-section">
                    <h3>
                        <i class="fa-solid fa-info-circle"></i>
                        Basic Information
                    </h3>
                    <p class="form-hint">Tell us about your place - make it stand out!</p>

                    <div class="mb-4">
                        <label for="title" class="form-label fw-semibold">
                            <i class="fa-solid fa-heading me-1"></i> Property Title
                        </label>
                        <input name="listing[title]" id="title" type="text" class="form-control"
                            placeholder="e.g., Cozy Beach House with Ocean View" required>
                        <div class="form-text">A catchy title helps your listing get noticed</div>
                        <div class="invalid-feedback">Please provide a title for your listing</div>
                    </div>

                    <div class="mb-4">
                        <label for="description" class="form-label fw-semibold">
                            <i class="fa-solid fa-align-left me-1"></i> Description
                        </label>
                        <textarea name="listing[description]" id="description" class="form-control" rows="5"
                            placeholder="Describe your place, amenities, nearby attractions, and what makes it special..."
                            required></textarea>
                        <div class="form-text">The more details, the better!</div>
                        <div class="invalid-feedback">Please enter a description</div>
                    </div>
                </div>

                <!-- Photo Upload -->
                <div class="form-section">
                    <h3>
                        <i class="fa-solid fa-camera"></i>
                        Property Photo
                    </h3>
                    <p class="form-hint">Upload a stunning photo of your property</p>

                    <label class="upload-area" for="imageUpload">
                        <i class="fa-solid fa-cloud-arrow-up"></i>
                        <p class="mb-2"><strong>Click to upload</strong> or drag and drop</p>
                        <p class="small text-muted">PNG, JPG, WEBP up to 10MB</p>
                        <input type="file" id="imageUpload" name="listing[image]" accept="image/*"
                            onchange="previewImage(this)">
                    </label>

                    <div id="imagePreview" class="mt-3 text-center" style="display: none;">
                        <img src="" alt="Preview" class="rounded-4 shadow"
                            style="max-width: 100%; max-height: 300px; object-fit: cover;">
                        <p class="text-muted mt-2 small">Image preview</p>
                    </div>
                </div>

                <!-- Pricing & Location -->
                <div class="form-section">
                    <h3>
                        <i class="fa-solid fa-location-dot"></i>
                        Pricing & Location
                    </h3>
                    <p class="form-hint">Set your price and tell guests where you're located</p>

                    <div class="row">
                        <div class="col-md-4 mb-4">
                            <label for="price" class="form-label fw-semibold">
                                <i class="fa-solid fa-indian-rupee-sign me-1"></i> Price per Night
                            </label>
                            <div class="price-input-group">
                                <span class="currency-symbol">â‚¹</span>
                                <input name="listing[price]" id="price" type="number" class="form-control"
                                    placeholder="1500" min="100" required>
                            </div>
                            <div class="invalid-feedback">Please enter a valid price</div>
                        </div>

                        <div class="col-md-8 mb-4">
                            <label for="country" class="form-label fw-semibold">
                                <i class="fa-solid fa-globe me-1"></i> Country
                            </label>
                            <input name="listing[country]" id="country" type="text" class="form-control"
                                placeholder="e.g., India" required>
                            <div class="invalid-feedback">Please enter the country</div>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label for="location" class="form-label fw-semibold">
                            <i class="fa-solid fa-map-pin me-1"></i> Location / City
                        </label>
                        <input name="listing[location]" id="location" type="text" class="form-control"
                            placeholder="e.g., Goa, Mumbai, Hyderabad" required>
                        <div class="invalid-feedback">Please enter the location</div>
                    </div>
                </div>

                <!-- Submit Section -->
                <div class="submit-section">
                    <a href="/listings" class="cancel-btn">
                        <i class="fa-solid fa-xmark me-1"></i> Cancel
                    </a>
                    <button type="submit" class="submit-btn">
                        <i class="fa-solid fa-plus"></i>
                        Create Listing
                    </button>
                </div>

            </form>
        </div>
    </div>

    <script>
        // Image Preview
        function previewImage(input) {
            const preview = document.getElementById('imagePreview');
            const previewImg = preview.querySelector('img');

            if (input.files && input.files[0]) {
                const reader = new FileReader();

                reader.onload = function (e) {
                    previewImg.src = e.target.result;
                    preview.style.display = 'block';
                }

                reader.readAsDataURL(input.files[0]);
            }
        }

        // Drag and drop styling
        const uploadArea = document.querySelector('.upload-area');

        ['dragenter', 'dragover'].forEach(eventName => {
            uploadArea.addEventListener(eventName, (e) => {
                e.preventDefault();
                uploadArea.style.borderColor = 'var(--primary)';
                uploadArea.style.background = 'rgba(255, 56, 92, 0.1)';
            });
        });

        ['dragleave', 'drop'].forEach(eventName => {
            uploadArea.addEventListener(eventName, (e) => {
                e.preventDefault();
                uploadArea.style.borderColor = '';
                uploadArea.style.background = '';
            });
        });

        uploadArea.addEventListener('drop', (e) => {
            const files = e.dataTransfer.files;
            document.getElementById('imageUpload').files = files;
            previewImage(document.getElementById('imageUpload'));
        });
    </script>